<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">

    <persistence-unit name="hellojpa">

        <class>hello.hellojpa.entity.Member</class>
        <class>hello.hellojpa.entity.Role</class>
        <class>hello.hellojpa.entity.Order</class>
        <class>hello.hellojpa.entity.OrderItem</class>
        <class>hello.hellojpa.entity.item.Item</class>
        <class>hello.hellojpa.entity.Delivery</class>
        <class>hello.hellojpa.entity.Category</class>
        <class>hello.hellojpa.entity.item.Album</class>
        <class>hello.hellojpa.entity.item.Book</class>
        <class>hello.hellojpa.entity.item.Movie</class>

        <properties>

            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="shlee"/>
